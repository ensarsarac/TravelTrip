
@model TravelTripProje.Models.Classes.Yorumlar

@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("Guncelle", "Yorum", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.ID)
    <div class="form-group">
        @Html.LabelFor(x => x.KullaniciAdi, new { @class = "form-label" })
        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.KullaniciAdi,"", new {@class="text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Mail, new { @class = "form-label" })
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Mail,"", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Yorum, new { @class = "form-label" })
        @Html.TextAreaFor(x => x.Yorum, 10, 5, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Yorum, "", new { @class = "text-danger" })

    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="/Yorum/Index/" class="btn btn-default">İptal Et</a>

}