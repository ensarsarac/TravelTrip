
@model List<TravelTripProje.Models.Classes.Blog>

<div class="padding1">
    <h4>Beğendiğim Yerler</h4>
    <div class="box-left">
        @foreach (var item in Model)
        {
            <div class="bot-img">
                <img src="~/web2/images/@item.Gorsel" alt="" />
            </div>
            <div class="bot-desc">
                @if (item.Aciklama.Length < 80)
                {
                    <p>@item.Aciklama</p>
                }
                else
                {
                    <p>@item.Aciklama.Substring(0, 80)... </p>

                }
            </div>
            <div class="clear"></div>
        }
   </div>
    @Html.Action("BegendigimYerler2","Default")
</div>







