
@model TravelTripProje.Models.Classes.Blog

@{
    ViewBag.Title = "BlogEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekle</h2>
<hr />
<form method="post">

    <div class="form-group">
        <label class="form-label">Başlık</label>
        <input type="text" class="form-control" name="Baslik" required />
    </div>

    <div class="form-group">
        <label class="form-label">Açıklama</label>
        <textarea class="form-control" cols="10" rows="10" name="Aciklama" required> </textarea>
    </div>


    <div class="form-group">
        <label class="form-label">Tarih</label>
        <input type="date" class="form-control" name="Tarih" required/>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>

</form>

