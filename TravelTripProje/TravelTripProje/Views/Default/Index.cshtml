
@model List<TravelTripProje.Models.Classes.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="header-banner">
    <div class="wrap">
        <div class="banner">
            <div class="indent">
                <h2 class="indent-left margin-bot">Tatil & Seyahat Bloğum</h2>
                <div class="banner-left">
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/glass.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Restaurantlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/flight.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Uçuşlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/group.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Yapılacak Şeyler</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/key.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Araba Kirala</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="header_bottom_right_images">

                    <div class="slider mb-3">
                        <ul class="rslides" id="slider1">
                            @foreach (var item in Model)
                            {
                                <li><img src="~/web2/images/@item.Gorsel" style="width:650px; height:400px;" alt=""></li>

                            }

                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<div class="content">
        <div class="wrap">
            <div class="wrapper">
                @Html.Action("IndexPartial","Default")
                <div class="con-top">
                    @Html.Action("Son3Blog","Default")

                </div>
            </div>
            <div class="grids">
                <div class="box1">            
                    @Html.Action("Son10BlogAnasayfa","Default")
                    @Html.Action("BegendigimYerler","Default")            
                    <div class="clear"></div>
                </div>
            </div>
        </div>
</div>


