
@model List<TravelTripProje.Models.Classes.Blog>

@{
    int i = 0;
}

@foreach (var item in Model)
{
    i++;
   
    if (i != 2)
    {
        <div class="left">
            <div class="bot-left">
                <img src="~/web2/images/@item.Gorsel" style="width:300px;height:190px;" />
            </div>
            <div class="left-text">
                <h4>@item.Baslik</h4>
                <span class="doller">@item.Tarih.ToString("dd-MM-yyyy")</span>
                @if (item.Aciklama.Length < 80)
                {
                    <p>@item.Aciklama</p>
                }
                else
                {
                    <p>@item.Aciklama.Substring(0, 80) ...</p>
                }
                <p><a href="/Blog/BlogDetay/@item.ID/"><span class="read">Daha Fazka</span></a></p>
            </div>
        </div>
    }
    else
    {
        <div class="right">
            <div class="bot-left">
                <img src="~/web2/images/@item.Gorsel" style="width:300px;height:190px;" />
            </div>
            <div class="left-text">
                <h4>@item.Baslik</h4>
                <span class="doller">@item.Tarih.ToString("dd-MM-yyyy")</span>
                @if (item.Aciklama.Length < 80)
                {
                    <p>@item.Aciklama</p>
                }
                else
                {
                    <p>@item.Aciklama.Substring(0, 80) ...</p>
                }
                <p><a href="/Blog/BlogDetay/@item.ID/"><span class="read">Daha Fazka</span></a></p>
            </div>
        </div>
    }

}
